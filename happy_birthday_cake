fun printCakeCandles(age: Int){       //this function takes age as an parameters and it will print candles using , and |
    print(" ")
    repeat(age){
        print(",")
    }
    println()
    
    print(" ")
    repeat(age){
		print("|")
    }
    println()
}
fun printCakeTop(age: Int){         //this will print cake top layer
    repeat (age + 2){
        print("=")
    }
    println()
}

fun printCakeBottom(age: Int, layers: Int){   //this will take layer and age as parameters adn will print bottom layer according to layers
    repeat(layers){
        repeat(age + 2){
            print("@")
        }
        println()
    }
}

fun main(){
    val age = 14  //here is your input age
    val layers = 6  //here id your cake layers
    printCakeCandles(age)   //these are the different functions
    printCakeTop(age)
    printCakeBottom(age,layers)
}

